/* pages/house/detail.wxss */
Page {
    background: #f8f6fc;
}

.card {
    width: 100%;
    display: flex;
    flex-direction: column;
    background: #fff;
    padding: 10px;
    box-sizing: border-box;
}

.edit {
    color: #24578f;
    font-size: 14px;
}

.line {
    margin-top: 5px;
}

.gray {
    font-size: 14px;
    color: #999;
}

.plus {
    background: #f8f6fc;
    font-size: 40px;
    height: 80px;
    width: 80px;
    display: flex;
    align-items: center;
    color: #666;
    justify-content: center;
}

.describe {
    color: #999;
    font-size: 14px;
    display: flex;
    height: 30px;
    align-items: center;
    width: 50%;
    box-sizing: border-box;
}

.card-container {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    margin-top: 15px;
}

.rooms {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.room {
    height: 30px;
    line-height: 30px;
    padding: 0 10px;
    width: 25%;
}