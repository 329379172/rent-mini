.card {
    width: 100%;
    display: flex;
    flex-direction: column;
    background: #fff;
    padding: 10px;
    box-sizing: border-box;
}

Page {
    background: #f8f6fc;
}

.plus {
    background: #f8f6fc;
    font-size: 40px;
    height: 80px;
    width: 80px;
    display: flex;
    align-items: center;
    color: #666;
    justify-content: center;
}

.del {
    color: #ffffff; align-items: center; font-size: 13px; width: 16px; height: 16px; border-radius: 8px; background: #ff0000; position: absolute; top: -8px; right: -8px;
    display: flex;
    justify-content: center;
}