.pannel-item::after {
    content: ' ';
    position: absolute;
    box-sizing: border-box;
    pointer-events: none;
    right: 0;
    bottom: 0;
    border-bottom: 1px solid #e7e7e7;
    transform: scaleY(0.5);
    left: 32rpx;
  }


.pannel-item {
    display: flex;
    align-items: center;
    height: 46px;
    padding: 0 32rpx;
    font-size: 32rpx;
    background-color: #fff;
    position: relative;
  }

  
  
  .pannel-label {
    width: 160rpx;
    margin-right: 32rpx;
  }
  
  .pannel-text {
    flex: 1;
    color: #000;
    opacity: 0.9;
  }
  .pannel-text.empty {
    opacity: 0.26;
  }

  
.box {
margin: 0 32rpx;
}
.external-class {
    margin-top: 32rpx;
  }